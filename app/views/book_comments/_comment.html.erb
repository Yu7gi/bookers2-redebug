<% book.book_comments.each do |book_comment| %>
  <div class='row w-50'>
    <div class='col'>
      <%= link_to(book_comment.user) do %>
        <%= image_tag book_comment.user.get_profile_image, size:"100x100" %><br>
        <%= book_comment.user.name %>
      <% end %>
    </div>
    <div class='col'>
      <%= book_comment.comment %>
    </div>
    <div>
      <% if book_comment.user == current_user %>
        <%= link_to book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true do %>
          <button class="btn btn-danger">Destroy</button>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>